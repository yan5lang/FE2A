<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="@color/background_tab_pressed"
                android:endColor="@color/blue"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="@dimen/switch_icon_size"
                android:height="@dimen/switch_icon_size" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="@color/tabcolor"
                android:endColor="@color/tabcolor"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="@dimen/switch_icon_size"
                android:height="@dimen/switch_icon_size" />
        </shape>
    </item>
</selector>